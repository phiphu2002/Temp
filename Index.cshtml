@model dynamic
@{
    ViewBag.Title = "Index";
}

@section Styles
{
    <link href="@Url.Content("~/Content/pastaxi-yeu-cau-khach-hang.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/bootstrap-datetimepicker.min.css")" rel="stylesheet" />
}

@section Scripts
{
    <script src="@Url.Content("/Scripts/moment-with-locales.min.js")"></script>
    <script src="@Url.Content("/Scripts/bootstrap.min.js")"></script>
    <script src="@Url.Content("/Scripts/bootstrap-datetimepicker.min.js")"></script>
    <script src="@Url.Content("/Scripts/jquery.twbsPagination.min.js")"></script>
    <script src="@Url.Content("~/Scripts/pastaxi/pastaxi_yeu_cau_khach_hang.js")"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.0.3/socket.io.js"></script>
    <script src="@Url.Content("~/Scripts/pastaxi/callerid_info.js")"></script>
}
<div id="yeu-cau-khach-hang-page" data-username="@User.Identity.Name">
    <div id="receive-page">
        <div class="col-md-12">
            <hr />
        </div>
        <div class="col-md-12">
            <div class="form-inline">
                Trạng thái: 
                <input id="cbbTrangThai" style="width: 150px; padding: 2px 0;" placeholder="Chọn điểm tài trợ..." />
                Từ ngày:
                <div class="form-group" style="width:150px;">
                    <div class="input-group date" id="dpFromDate">
                        <input type="text" class="form-control" />
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-calendar"></span>
                        </span>
                    </div>
                </div>

                Đến ngày: 
                <div class="form-group" style="width:150px;">
                    <div class="input-group date" id="dpToDate">
                        <input type="text" class="form-control" />
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-calendar"></span>
                        </span>
                    </div>
                </div>
                <span class="separate"></span>
                Lọc: 
                <button id="btnFilterYc" type="button" class="k-button"><span class="glyphicon glyphicon-filter"></span></button> 

                <input id="txtSearch" style="width:100px !important;height:33px; padding-left:5px;" type="text" placeholder="Nhập từ khóa tìm kiếm..." />
                <button id="btnSearch" type="button" class="btn btn-default default"><span class="glyphicon glyphicon-search"></span></button>
            </div>
            <div class="form-inline">
                <button id="btnShowAdd" type="button" class="btn btn-default default"><span>Thêm mới</span></button>
            </div>
        </div>
        <div class="col-md-12">
            <hr />
        </div>
        
        <div class="row">
            <div class="col-md-12">
                <div class="table-responsive">
                    <table id="tblYeuCauKhachHang" class="table table-striped table-hover table-bordered">
                        <thead>
                            <tr>
                                <th style="width: 50px;">STT</th>
                                <th style="min-width: 80px">Tên người dùng</th>
                                <th style="min-width: 80px;">Số điện thoại</th>
                                <th style="min-width: 100px;">Thời gian yêu cầu</th>
                                <th style="min-width: 100px;">Tên nguồn</th>
                                <th style="min-width: 100px;">Tên hình thức</th>
                                <th style="min-width: 100px;">Nội dung tiếp nhận</th>
                                <th style="min-width: 100px;">Nội dung xử lý</th>
                                <th style="min-width: 100px;">Người tiếp nhận</th>
                                <th style="min-width: 100px;">Người xử lý</th>
                                <th style="min-width: 100px;">Thời gian tiếp nhận</th>
                                <th style="min-width: 100px;">Thời gian đang xử lý</th>
                                <th style="min-width: 100px;">Thời gian đã xử lý</th>
                                <th style="min-width: 100px;">Trạng thái</th>
                                <th style="min-width: 100px;">Ngày tạo</th>
                                <th style="width: 50px;"></th>
                                <th style="width: 90px;"></th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>

                <nav aria-label="Phân trang điểm tài trợ" class="text-right">
                    <ul id="paging-yeu-cau-khach-hang" class="pagination pagination-sm"></ul>
                </nav>
            </div>
            <div class="col-md-6">
                <h2></h2>
            </div>
        </div>
    </div>
</div>

@Html.Partial("_YeuCauKhachHangEdit")
@Html.Partial("_FilterSearchYeuCauKhachHang")
